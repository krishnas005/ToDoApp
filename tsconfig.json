{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "components/EditTopicForm.jsx", "components/RemoveBtn.jsx", "components/TopicsList.jsx", "app/editTopic/[id]/page.jsx", "app/api/topics/[id]/route.js", "app/layout.jsx", "components/Navbar.jsx", "app/addTopic/page.jsx"],
  "exclude": ["node_modules"]
}
